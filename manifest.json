{
  "manifest_version": 2,
  "name": "RAWG Toolkit",
  "description": "Helps you use RAWG efficiently.",
  "version": "1.3",
  "icons": {
    "16": "icon.jpg",
    "48": "icon.jpg",
    "128": "icon.jpg"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon.jpg",
      "24": "icon.jpg",
      "32": "icon.jpg"
    }
  },
  "omnibox": {
    "keyword": "rg"
  },
  "background": {
    "scripts": ["bg.js", "omnibox.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.rawg.io/*", "*://rawg.io/*"],
      "js": ["vue.js", "components.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": [
    "activeTab",
    "notifications",
    "webNavigation",
    "storage",
    "*://*.rawg.io/"
  ]
}
